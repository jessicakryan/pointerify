[
    {
        "el": "root",
        "on": "mousedown",
        "bind": "handleMouseDown"
    },
    {
        "el": "root",
        "on": "touchstart",
        "bind": "handleTouchStart"
    },
    {
        "el": "root",
        "on": "click",
        "bind": "handleClick"
    },
    {
        "on": "mousemove",
        "bind": "handleMouseMove"
    },
    {
        "on": "touchmove",
        "bind": "handleTouchMove"
    },
    {
        "on": "mouseup",
        "bind": "handleMouseUp"
    },
    {
        "on": "touchend",
        "bind": "handleTouchEnd"
    }
]